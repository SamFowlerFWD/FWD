---
import CompetitorAdvantageClock from '../psychological/CompetitorAdvantageClock.astro';

interface Props {
  headline: string;
  subheadline: string;
}

const { headline, subheadline } = Astro.props;
---

<section class="hero relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- AI Mesh Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-deep-space via-deep-space/95 to-ai-purple/20">
    <div class="absolute inset-0 bg-ai-mesh opacity-30"></div>
    <div class="absolute inset-0 bg-gradient-radial from-ai-purple/10 via-transparent to-transparent"></div>
  </div>
  
  <!-- Animated particles -->
  <div class="particles absolute inset-0">
    <span></span>
    <span></span>
    <span></span>
    <span></span>
    <span></span>
  </div>
  
  <div class="container relative z-10 mx-auto px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Left: Messaging -->
      <div class="text-white space-y-6 animate-fade-in">
        <div class="inline-flex items-center gap-2 bg-urgent-amber/20 backdrop-blur-sm border border-urgent-amber/30 rounded-full px-4 py-2 text-urgent-amber animate-pulse-glow">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
          </svg>
          <span class="text-sm font-medium">Limited time: 70% cost reduction for early adopters</span>
        </div>
        
        <h1 class="text-5xl lg:text-7xl font-display font-bold leading-tight">
          {headline.split(' ').map((word, i) => 
            i === 0 ? <span class="ai-gradient-text">{word}</span> : ` ${word}`
          )}
        </h1>
        
        <p class="text-xl lg:text-2xl text-gray-300 leading-relaxed">
          {subheadline}
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 pt-4">
          <button class="btn-urgent text-lg px-8 py-4 group">
            <span>Start Saving Today</span>
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </button>
          
          <button class="bg-white/10 backdrop-blur-sm border border-white/20 text-white px-8 py-4 rounded-lg font-semibold hover:bg-white/20 transition-all duration-200">
            Watch 2-Min Demo
          </button>
        </div>
        
        <div class="flex items-center gap-6 pt-4">
          <div class="flex -space-x-2">
            {[1,2,3,4,5].map(i => (
              <div class="w-10 h-10 rounded-full bg-gradient-to-br from-gray-300 to-gray-400 border-2 border-deep-space"></div>
            ))}
          </div>
          <div>
            <div class="flex gap-1">
              {[1,2,3,4,5].map(_ => (
                <svg class="w-5 h-5 text-urgent-amber" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              ))}
            </div>
            <p class="text-sm text-gray-300 mt-1">287+ Norfolk businesses transformed</p>
          </div>
        </div>
      </div>
      
      <!-- Right: Competitor Clock -->
      <div class="lg:pl-12 animate-slide-up" style="animation-delay: 0.3s">
        <CompetitorAdvantageClock />
        
        <!-- Trust indicators -->
        <div class="mt-6 grid grid-cols-2 gap-4">
          <div class="glass-premium rounded-lg p-4 text-center">
            <div class="text-2xl font-bold text-white">95%</div>
            <div class="text-sm text-gray-300">Success Rate</div>
          </div>
          <div class="glass-premium rounded-lg p-4 text-center">
            <div class="text-2xl font-bold text-white">< 8 weeks</div>
            <div class="text-sm text-gray-300">Avg. Delivery</div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-float">
    <svg class="w-6 h-6 text-white/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>

<style>
  .particles span {
    position: absolute;
    width: 2px;
    height: 2px;
    background: rgba(139, 92, 246, 0.5);
    border-radius: 50%;
    animation: particle-float 10s infinite;
  }
  
  .particles span:nth-child(1) {
    top: 10%;
    left: 20%;
    animation-duration: 8s;
  }
  
  .particles span:nth-child(2) {
    top: 30%;
    left: 60%;
    animation-duration: 12s;
    animation-delay: 2s;
  }
  
  .particles span:nth-child(3) {
    top: 50%;
    left: 30%;
    animation-duration: 10s;
    animation-delay: 4s;
  }
  
  .particles span:nth-child(4) {
    top: 70%;
    left: 80%;
    animation-duration: 14s;
    animation-delay: 1s;
  }
  
  .particles span:nth-child(5) {
    top: 90%;
    left: 10%;
    animation-duration: 11s;
    animation-delay: 3s;
  }
  
  @keyframes particle-float {
    0%, 100% {
      transform: translate(0, 0) scale(1);
      opacity: 0;
    }
    10% {
      opacity: 1;
    }
    90% {
      opacity: 1;
    }
    100% {
      transform: translate(100px, -100px) scale(1.5);
      opacity: 0;
    }
  }
</style>