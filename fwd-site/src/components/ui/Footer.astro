---
const currentYear = new Date().getFullYear();

const navLinks = [
  { label: 'Home', href: '/' },
  { label: 'Services', href: '/services' },
  { label: 'Portfolio', href: '/portfolio' },
  { label: 'Blog', href: '/blog' },
  { label: 'About', href: '/about' },
  { label: 'Privacy Policy', href: '/privacy-policy' },
];

const serviceLinks = [
  { label: 'Professional Websites', href: '/services/professional-websites' },
  { label: 'Business Automation', href: '/services/business-process-automation' },
  { label: 'Custom App Development', href: '/services/custom-app-development' },
  { label: 'Hosting & Maintenance', href: '/services/reliable-hosting-maintenance' },
];
---

<footer class="bg-slate-900 text-white border-t border-slate-800">
  <div class="container mx-auto px-6 lg:px-8 py-16">
    <div class="grid md:grid-cols-3 gap-12 max-w-5xl mx-auto">
      <!-- Brand -->
      <div>
        <a href="/" class="flex items-center gap-3 mb-4">
          <img src="/fwd-logo.webp" alt="FWD Thinking Solutions" class="h-16 w-auto" loading="lazy" />
          <span class="text-sm text-gray-300 font-medium">Thinking Solutions</span>
        </a>
        <p class="text-gray-400 text-sm leading-relaxed">
          Web development, business automation, and custom software for UK businesses.
        </p>
        <p class="text-gray-500 text-sm mt-4">
          Based in Norwich, Norfolk. Working with businesses across the UK.
        </p>
      </div>

      <!-- Navigation -->
      <div>
        <h3 class="text-sm font-semibold text-gray-300 uppercase tracking-wider mb-4">Navigation</h3>
        <ul class="space-y-2">
          {navLinks.map(link => (
            <li>
              <a href={link.href} class="text-gray-400 hover:text-white transition-colors text-sm">{link.label}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-sm font-semibold text-gray-300 uppercase tracking-wider mb-4">Services</h3>
        <ul class="space-y-2">
          {serviceLinks.map(link => (
            <li>
              <a href={link.href} class="text-gray-400 hover:text-white transition-colors text-sm">{link.label}</a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>

  <!-- Bottom bar -->
  <div class="border-t border-slate-800">
    <div class="container mx-auto px-6 lg:px-8 py-6">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4 text-sm text-gray-500">
        <p>&copy; 2024-{currentYear} FWD Thinking Solutions. All rights reserved.</p>
        <p>Norwich, Norfolk, United Kingdom</p>
      </div>
    </div>
  </div>
</footer>
