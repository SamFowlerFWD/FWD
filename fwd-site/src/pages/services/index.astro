    </div>
  </section>

  <!-- Schema Markup -->
  <script type="application/ld+json">
    {JSON.stringify({
      "@context": "https://schema.org",
      "@type": "ItemList",
      "name": "FWD Thinking Solutions - Services",
      "description": "Web development, automation, custom apps, and hosting for UK businesses",
      "itemListElement": [
        {
          "@type": "Service",
          "@id": "https://f-w-d.co.uk/services/professional-websites",
          "name": "Professional Websites",
          "description": "Clean, fast, mobile-friendly websites for businesses"
        },
        {
          "@type": "Service",
          "@id": "https://f-w-d.co.uk/services/business-process-automation",
          "name": "Business Process Automation",
          "description": "Automate repetitive business tasks to save time"
        },
        {
          "@type": "Service",
          "@id": "https://f-w-d.co.uk/services/custom-app-development",
          "name": "Custom App Development",
          "description": "Bespoke web and mobile applications for your business"
        },
        {
          "@type": "Service",
          "@id": "https://f-w-d.co.uk/services/reliable-hosting-maintenance",
          "name": "Hosting & Maintenance",
          "description": "Reliable hosting with backups, updates, and support"
        }
      ]
    })}
  </script>
</Layout>
