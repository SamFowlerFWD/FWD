---
import Layout from '../../layouts/Layout.astro';
import AIAdvantageCalculator from '../../components/interactive/AIAdvantageCalculator.astro';
import LocalProofFeed from '../../components/trust/LocalProofFeed.astro';
---

<Layout 
  title="AI Software Development"
  description="Custom AI solutions for UK SMBs. Automate repetitive tasks, reduce costs by 70%, and outpace competitors. Norfolk's trusted AI development partner."
  keywords="ai software development norwich, custom ai solutions uk, business automation software, machine learning development"
>
  <!-- Hero Section -->
  <section class="relative py-20 bg-gradient-to-br from-deep-space via-deep-space/95 to-ai-purple/20">
    <div class="absolute inset-0 bg-ai-mesh opacity-20"></div>
    <div class="container relative z-10 mx-auto px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center text-white">
        <div class="inline-flex items-center gap-2 bg-success-green/20 backdrop-blur-sm border border-success-green/30 rounded-full px-4 py-2 mb-6">
          <svg class="w-4 h-4 text-success-green" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span class="text-sm font-medium text-success-green">Norfolk's #1 AI Development Partner</span>
        </div>
        
        <h1 class="text-5xl lg:text-6xl font-bold mb-6">
          AI Software That <span class="ai-gradient-text">Works While You Sleep</span>
        </h1>
        
        <p class="text-xl lg:text-2xl text-gray-300 mb-8">
          Custom AI solutions that automate your repetitive tasks, eliminate errors, and save you £1000s every month. Built specifically for UK SMBs.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="#calculator" class="btn-urgent text-lg px-8 py-4">
            Calculate Your Savings
          </a>
          <button class="bg-white/10 backdrop-blur-sm border border-white/20 text-white px-8 py-4 rounded-lg font-semibold hover:bg-white/20 transition-all duration-200">
            See AI in Action
          </button>
        </div>
      </div>
    </div>
  </section>
  
  <!-- What We Automate -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-deep-space mb-4">
          Turn <span class="text-urgent-amber">3 Hours of Work</span> Into <span class="text-success-green">3 Minutes</span>
        </h2>
        <p class="text-xl text-gray-700">
          We identify and eliminate the tasks that drain your profits
        </p>
      </div>
      
      <div class="grid lg:grid-cols-3 gap-8">
        {[
          {
            icon: "📊",
            title: "Data Processing",
            tasks: [
              "Invoice processing & reconciliation",
              "Report generation & analytics",
              "Data entry & validation",
              "Document classification"
            ],
            savings: "Save 15 hours/week"
          },
          {
            icon: "💬",
            title: "Customer Service",
            tasks: [
              "24/7 customer support chatbots",
              "Appointment scheduling",
              "FAQ & query handling",
              "Lead qualification"
            ],
            savings: "Handle 10x more queries"
          },
          {
            icon: "⚙️",
            title: "Business Operations",
            tasks: [
              "Inventory management",
              "Quality control checks",
              "Staff scheduling",
              "Compliance monitoring"
            ],
            savings: "Reduce errors by 95%"
          }
        ].map(category => (
          <div class="bg-gradient-to-b from-gray-50 to-white rounded-2xl p-8 border border-gray-100 hover:shadow-xl transition-shadow">
            <div class="text-4xl mb-4">{category.icon}</div>
            <h3 class="text-2xl font-bold text-deep-space mb-4">{category.title}</h3>
            <ul class="space-y-3 mb-6">
              {category.tasks.map(task => (
                <li class="flex items-start gap-2 text-gray-700">
                  <svg class="w-5 h-5 text-ai-purple mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                  </svg>
                  {task}
                </li>
              ))}
            </ul>
            <div class="success-badge text-center">
              {category.savings}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Our Process -->
  <section class="py-20 bg-gradient-to-b from-norfolk-sand/10 to-white">
    <div class="container mx-auto px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-deep-space mb-4">
          From Idea to <span class="ai-gradient-text">Working AI</span> in 8 Weeks
        </h2>
        <p class="text-xl text-gray-700">
          Our proven process delivers results fast
        </p>
      </div>
      
      <div class="max-w-4xl mx-auto">
        {[
          {
            week: "Week 1-2",
            phase: "Discovery & Analysis",
            description: "We map your workflows, identify automation opportunities, and calculate exact ROI",
            deliverable: "Custom AI Strategy Report"
          },
          {
            week: "Week 3-4",
            phase: "AI Development",
            description: "Our team builds your custom AI solution using cutting-edge technology",
            deliverable: "Working Prototype"
          },
          {
            week: "Week 5-6",
            phase: "Testing & Refinement",
            description: "We test with real data, refine accuracy, and ensure seamless integration",
            deliverable: "Production-Ready System"
          },
          {
            week: "Week 7-8",
            phase: "Deployment & Training",
            description: "Go live with full training for your team and ongoing support",
            deliverable: "Fully Operational AI"
          }
        ].map((step, index) => (
          <div class="flex gap-6 mb-8">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-ai-purple text-white rounded-full flex items-center justify-center font-bold">
                {index + 1}
              </div>
            </div>
            <div class="flex-1 pb-8 border-l-2 border-gray-200 pl-6 -ml-6">
              <div class="bg-white rounded-xl p-6 shadow-md hover:shadow-lg transition-shadow">
                <div class="flex items-center justify-between mb-2">
                  <span class="text-sm font-medium text-ai-purple">{step.week}</span>
                  <span class="trust-badge">{step.deliverable}</span>
                </div>
                <h3 class="text-xl font-bold text-deep-space mb-2">{step.phase}</h3>
                <p class="text-gray-600">{step.description}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Technology Stack -->
  <section class="py-20 bg-deep-space text-white">
    <div class="container mx-auto px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold mb-4">
          Enterprise-Grade AI, <span class="ai-gradient-text">SMB Pricing</span>
        </h2>
        <p class="text-xl text-gray-300">
          We use the same technology as Fortune 500 companies, at a fraction of the cost
        </p>
      </div>
      
      <div class="grid lg:grid-cols-4 gap-6">
        {[
          { name: "GPT-4", category: "Language AI", description: "Natural language processing" },
          { name: "Claude 3", category: "Analysis AI", description: "Complex reasoning & analysis" },
          { name: "TensorFlow", category: "Machine Learning", description: "Custom model training" },
          { name: "LangChain", category: "AI Orchestration", description: "Multi-agent systems" },
          { name: "Pinecone", category: "Vector Database", description: "Knowledge management" },
          { name: "OpenAI API", category: "AI Services", description: "Vision & speech processing" },
          { name: "Python", category: "Development", description: "Core AI programming" },
          { name: "Azure AI", category: "Cloud Platform", description: "Scalable infrastructure" }
        ].map(tech => (
          <div class="glass-premium rounded-lg p-4 hover:bg-white/10 transition-colors">
            <div class="text-sm text-ai-purple mb-1">{tech.category}</div>
            <div class="font-semibold mb-1">{tech.name}</div>
            <div class="text-sm text-gray-400">{tech.description}</div>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Calculator Section -->
  <section id="calculator" class="py-20 bg-gradient-to-b from-white to-norfolk-sand/20">
    <div class="container mx-auto px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-deep-space mb-4">
          See How Much AI Can <span class="ai-gradient-text">Save Your Business</span>
        </h2>
        <p class="text-xl text-gray-700">
          Get a personalized savings report in 30 seconds
        </p>
      </div>
      
      <AIAdvantageCalculator title="Calculate Your AI ROI" />
    </div>
  </section>
  
  <!-- Success Stories -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-deep-space mb-4">
          Real Results from <span class="ai-gradient-text">Real Norfolk Businesses</span>
        </h2>
      </div>
      
      <div class="grid lg:grid-cols-2 gap-8">
        <LocalProofFeed />
        
        <div class="space-y-6">
          <div class="bg-gradient-to-br from-success-green/5 to-success-green/10 rounded-xl p-6 border border-success-green/20">
            <h3 class="text-2xl font-bold text-deep-space mb-4">Average Client Results</h3>
            <div class="space-y-3">
              <div class="flex justify-between items-center">
                <span class="text-gray-700">Time Saved:</span>
                <span class="text-2xl font-bold text-success-green">73%</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-gray-700">Cost Reduction:</span>
                <span class="text-2xl font-bold text-success-green">£4,800/month</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-gray-700">Error Reduction:</span>
                <span class="text-2xl font-bold text-success-green">95%</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-gray-700">ROI Period:</span>
                <span class="text-2xl font-bold text-success-green">8 weeks</span>
              </div>
            </div>
          </div>
          
          <div class="bg-urgent-amber/5 rounded-xl p-6 border border-urgent-amber/20">
            <h4 class="font-bold text-deep-space mb-2">⚠️ Limited Availability</h4>
            <p class="text-gray-700 mb-4">
              We only take on 5 new AI projects per month to ensure quality. 3 spots remaining for January 2025.
            </p>
            <button class="btn-urgent w-full">
              Reserve Your Spot Now
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- FAQ Section -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-deep-space mb-4">
          Common Questions About AI Development
        </h2>
      </div>
      
      <div class="max-w-3xl mx-auto space-y-6">
        {[
          {
            q: "How much does custom AI development cost?",
            a: "Our AI solutions start at £5,000 for simple automation and average £15,000 for comprehensive systems. This is 70% less than traditional development, and most clients see full ROI within 8-12 weeks."
          },
          {
            q: "Do I need technical knowledge to use AI?",
            a: "Not at all. We design our AI solutions to be as simple as using email. We provide full training and ongoing support to ensure your team is comfortable."
          },
          {
            q: "How long does development take?",
            a: "Most projects are completed in 6-8 weeks. Simple automations can be live in 2-3 weeks, while complex systems may take up to 12 weeks."
          },
          {
            q: "Will AI replace my employees?",
            a: "No. AI handles repetitive tasks so your team can focus on high-value work like customer relationships and strategic growth. It makes your team more productive, not redundant."
          },
          {
            q: "What if the AI makes mistakes?",
            a: "Our AI systems have 95%+ accuracy rates and include human oversight options. We also provide a 90-day guarantee to fix any issues at no cost."
          },
          {
            q: "Can AI integrate with my existing software?",
            a: "Yes. We specialize in integrating AI with popular business tools like QuickBooks, Salesforce, Microsoft 365, and custom databases."
          }
        ].map(faq => (
          <details class="bg-white rounded-xl p-6 shadow-md hover:shadow-lg transition-shadow group">
            <summary class="flex justify-between items-center cursor-pointer list-none">
              <h3 class="text-lg font-semibold text-deep-space pr-4">{faq.q}</h3>
              <svg class="w-5 h-5 text-ai-purple transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
              </svg>
            </summary>
            <p class="text-gray-700 mt-4">{faq.a}</p>
          </details>
        ))}
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-ai-purple to-trust-blue text-white">
    <div class="container mx-auto px-6 lg:px-8 text-center">
      <h2 class="text-4xl lg:text-5xl font-bold mb-6">
        Start Saving £1000s Every Month
      </h2>
      <p class="text-xl text-gray-100 mb-8 max-w-2xl mx-auto">
        Join 287+ Norfolk businesses using AI to work smarter, not harder. Get your free AI strategy session today.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <button class="btn-urgent text-lg px-8 py-4 bg-urgent-amber hover:bg-urgent-amber/90">
          Get Free AI Strategy Session
        </button>
        <a href="tel:+441234567890" class="bg-white/20 backdrop-blur-sm border-2 border-white text-white px-8 py-4 rounded-lg font-semibold hover:bg-white hover:text-deep-space transition-all duration-200 inline-flex items-center justify-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          Call Now: 01234 567890
        </a>
      </div>
      
      <p class="text-sm text-gray-200 mt-6">
        Free consultation • No obligations • Worth £500
      </p>
    </div>
  </section>
</Layout>