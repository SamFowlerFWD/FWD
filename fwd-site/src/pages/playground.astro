---
import Layout from '../layouts/Layout.astro';
import AIAssistant from '../components/playground/AIAssistant';
import QuickDemos from '../components/playground/QuickDemos';
import SavingsCalculator from '../components/playground/SavingsCalculator';
import ValueCounter from '../components/playground/ValueCounter';

const title = 'AI Playground - Discover How AI Can Transform Your Business | FWD';
const description = 'Try our AI Business Problem Solver. Get personalized recommendations for automation, websites, apps, and hosting solutions in under 2 minutes.';
---

<Layout title={title} description={description}>
  <main class="min-h-screen bg-gradient-to-b from-white via-purple-50/20 to-white">
    <!-- Hero Section -->
    <section class="relative pt-32 pb-16 px-6 lg:px-8">
      <div class="container mx-auto max-w-7xl">
        <div class="text-center mb-12">
          <div class="inline-flex items-center gap-2 bg-urgent-amber/10 text-urgent-amber px-4 py-2 rounded-full mb-6">
            <span class="animate-pulse">ðŸš€</span>
            <span class="text-sm font-semibold">AI-Powered Business Discovery</span>
          </div>
          
          <h1 class="text-4xl md:text-6xl font-bold text-deep-space mb-6">
            Discover Your AI Opportunity
          </h1>
          
          <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
            In 2 minutes, our AI will identify exactly how to save you time and money. 
            No buzzwords, just real solutions with real numbers.
          </p>

          <!-- Stats Bar -->
          <div class="flex flex-wrap justify-center gap-8 mb-12">
            <div class="text-center">
              <div class="text-3xl font-bold text-ai-purple">90%</div>
              <div class="text-sm text-gray-600">Time Saved</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-trust-blue">Â£47k</div>
              <div class="text-sm text-gray-600">Average Annual Saving</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-success-green">2 mins</div>
              <div class="text-sm text-gray-600">To Get Your Plan</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- AI Assistant Section -->
    <section class="pb-16 px-6 lg:px-8">
      <div class="container mx-auto max-w-7xl">
        <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
          <div class="bg-gradient-to-r from-ai-purple to-trust-blue p-6 text-white">
            <h2 class="text-2xl font-bold mb-2">AI Business Problem Solver</h2>
            <p class="opacity-90">Answer 3-4 quick questions to get your personalized AI transformation plan</p>
          </div>
          
          <AIAssistant client:load />
        </div>
      </div>
    </section>

    <!-- Quick Demos Section -->
    <section class="pb-16 px-6 lg:px-8">
      <div class="container mx-auto max-w-7xl">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-deep-space mb-4">
            Try These Quick Demos
          </h2>
          <p class="text-lg text-gray-600">
            See AI in action with these instant, no-login demos
          </p>
        </div>
        
        <QuickDemos client:visible />
      </div>
    </section>

    <!-- Savings Calculator Section -->
    <section class="pb-20 px-6 lg:px-8">
      <div class="container mx-auto max-w-7xl">
        <div class="bg-gradient-to-br from-purple-50 to-blue-50 rounded-2xl p-8 md:p-12">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-deep-space mb-4">
              Calculate Your Savings
            </h2>
            <p class="text-lg text-gray-600">
              See exactly how much time and money you could save with AI
            </p>
          </div>
          
          <SavingsCalculator client:visible />
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="pb-20 px-6 lg:px-8">
      <div class="container mx-auto max-w-4xl text-center">
        <div class="bg-deep-space rounded-2xl p-12 text-white">
          <h2 class="text-3xl font-bold mb-4">
            Ready to Stop Losing to AI-Powered Competitors?
          </h2>
          <p class="text-xl mb-8 opacity-90">
            Get your custom AI implementation plan today
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a 
              href="/#contact" 
              class="bg-urgent-amber hover:bg-urgent-amber/90 text-deep-space font-bold py-4 px-8 rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl"
            >
              Book Free Consultation
            </a>
            <a 
              href="/services" 
              class="bg-white/10 hover:bg-white/20 text-white font-bold py-4 px-8 rounded-lg transition-all duration-200 border border-white/30"
            >
              View All Services
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <!-- Value Counter (tracks user engagement) -->
  <ValueCounter client:idle />
</Layout>