        <h3 class="text-3xl font-bold mb-3">Bundle 2+ Services and Save 20%</h3>
        <p class="text-xl mb-6">Most businesses start with automation + professional website for maximum impact</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <button class="bg-white text-deep-space font-bold py-3 px-8 rounded-lg hover:bg-gray-100 transition-all duration-200">
            Calculate Bundle Savings
          </button>
          <button class="bg-white/20 backdrop-blur-sm border-2 border-white text-white font-bold py-3 px-8 rounded-lg hover:bg-white/30 transition-all duration-200">
            See Bundle Examples
          </button>
        </div>
      </div>

      <!-- Interactive Components Grid -->
      <div class="grid lg:grid-cols-2 gap-8">
        <!-- Service Quiz -->
        <ServiceQuiz client:load />
        
        <!-- Live Success Feed -->
        <LiveSuccessFeed client:load />
      </div>
    </div>
  </section>

  <!-- Service Comparison Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-6 lg:px-8">
      <ServiceComparison client:load serviceName="automation" comparisons={[]} />
