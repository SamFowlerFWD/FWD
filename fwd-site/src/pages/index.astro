---
import Layout from '../layouts/Layout.astro';
import PostCard from '../components/blog/PostCard.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<Layout
  title="FWD Thinking Solutions - Web Development & Automation"
  description="Professional web development and business automation in Norwich, Norfolk. Websites, apps, booking systems and hosting for UK businesses."
>
  <!-- Hero Section -->
  <section class="relative py-28 lg:py-36 hero-gradient overflow-hidden">
    <!-- Particles -->
    <div class="absolute inset-0 pointer-events-none">
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
    </div>

    <div class="container relative z-10 mx-auto px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center text-white">
        <div class="hero-text-animate">
          <span class="inline-block bg-white/10 backdrop-blur-sm border border-white/20 rounded-full px-4 py-2 text-sm font-medium text-gray-200 mb-6">
            Based in Norfolk, working across the UK
          </span>
        </div>
        <h1 class="text-5xl lg:text-7xl font-bold mb-6 hero-text-animate">
          Web Development &<br>
          <span class="bg-gradient-to-r from-amber-400 to-amber-300 bg-clip-text text-transparent">Business Automation</span>
        </h1>
        <p class="text-xl lg:text-2xl text-gray-200 mb-10 max-w-2xl mx-auto hero-text-animate">
          Websites, booking systems, custom apps, and automation. Built to save you time.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center hero-text-animate">
          <a href="https://wa.me/447584417830" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 bg-amber-500 hover:bg-amber-600 text-white font-bold py-4 px-8 rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl hover:-translate-y-0.5 btn-glow">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>
            Message on WhatsApp
          </a>
          <a href="/portfolio" class="bg-white/10 backdrop-blur-sm border-2 border-white/30 text-white font-bold py-4 px-8 rounded-lg hover:bg-white hover:text-slate-900 transition-all duration-200">
            View Portfolio
          </a>
        </div>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 scroll-indicator">
      <svg class="w-6 h-6 text-white/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </section>

  <!-- Services Section -->
  <section id="services" class="py-24 bg-white">
    <div class="container mx-auto px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16" data-animate>
        <h2 class="text-4xl lg:text-5xl font-bold text-slate-900 mb-6">
          What I Build
        </h2>
        <p class="text-xl text-gray-600">
          End-to-end digital solutions tailored to your business needs.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto" data-stagger>
        <a href="/services/business-process-automation" class="bg-white rounded-2xl p-8 shadow-lg border border-gray-100 card-hover group" data-animate>
          <div class="text-4xl mb-4 transition-transform duration-300 group-hover:scale-110">&#9889;</div>
          <h3 class="text-2xl font-bold text-slate-900 mb-3 group-hover:text-ai-purple transition-colors">Business Process Automation</h3>
          <p class="text-gray-600 mb-4">Streamline repetitive tasks and workflows. From invoicing to customer communications, let technology handle the routine work.</p>
          <span class="text-ai-purple font-semibold inline-flex items-center gap-1">Learn more <span class="arrow-slide">&rarr;</span></span>
        </a>

        <a href="/services/professional-websites" class="bg-white rounded-2xl p-8 shadow-lg border border-gray-100 card-hover group" data-animate>
          <div class="text-4xl mb-4 transition-transform duration-300 group-hover:scale-110">&#127760;</div>
          <h3 class="text-2xl font-bold text-slate-900 mb-3 group-hover:text-ai-purple transition-colors">Professional Websites</h3>
          <p class="text-gray-600 mb-4">Modern, responsive websites that represent your business well. Fast, mobile-friendly, and optimised for search engines.</p>
          <span class="text-ai-purple font-semibold inline-flex items-center gap-1">Learn more <span class="arrow-slide">&rarr;</span></span>
        </a>

        <a href="/services/custom-app-development" class="bg-white rounded-2xl p-8 shadow-lg border border-gray-100 card-hover group" data-animate>
          <div class="text-4xl mb-4 transition-transform duration-300 group-hover:scale-110">&#128241;</div>
          <h3 class="text-2xl font-bold text-slate-900 mb-3 group-hover:text-ai-purple transition-colors">Custom App Development</h3>
          <p class="text-gray-600 mb-4">Bespoke applications built for your specific needs. iOS apps, web platforms, and internal tools.</p>
          <span class="text-ai-purple font-semibold inline-flex items-center gap-1">Learn more <span class="arrow-slide">&rarr;</span></span>
        </a>

        <a href="/services/reliable-hosting-maintenance" class="bg-white rounded-2xl p-8 shadow-lg border border-gray-100 card-hover group" data-animate>
          <div class="text-4xl mb-4 transition-transform duration-300 group-hover:scale-110">&#128640;</div>
          <h3 class="text-2xl font-bold text-slate-900 mb-3 group-hover:text-ai-purple transition-colors">Hosting & Maintenance</h3>
          <p class="text-gray-600 mb-4">Keep your website running smoothly with reliable hosting, regular updates, backups, and ongoing support.</p>
          <span class="text-ai-purple font-semibold inline-flex items-center gap-1">Learn more <span class="arrow-slide">&rarr;</span></span>
        </a>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-24 bg-slate-900 text-white">
    <div class="container mx-auto px-6 lg:px-8">
      <div class="text-center mb-12" data-animate>
        <h2 class="text-4xl font-bold mb-6 text-white">
          What Clients Say
        </h2>
      </div>

      <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto" data-stagger>
        <div class="bg-white/5 backdrop-blur-sm rounded-xl p-8 border border-white/10 card-hover" data-animate>
          <div class="flex gap-1 mb-4">
            {[1,2,3,4,5].map(_ => (
              <svg class="w-5 h-5 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            ))}
          </div>
          <blockquote class="text-white mb-6 text-lg leading-relaxed">"Sam really listens to the client's brief and adds value to their ideas. He is naturally creative and takes time to understand and produce amazing outcomes. Highly recommended."</blockquote>
          <div>
            <div class="font-semibold text-white">Anna Kidd</div>
            <div class="text-sm text-gray-300">Director, Harford Attachments Ltd</div>
          </div>
        </div>

        <div class="bg-white/5 backdrop-blur-sm rounded-xl p-8 border border-white/10 card-hover" data-animate>
          <div class="flex gap-1 mb-4">
            {[1,2,3,4,5].map(_ => (
              <svg class="w-5 h-5 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            ))}
          </div>
          <blockquote class="text-white mb-6 text-lg leading-relaxed">"We're on the first page of Google in the UK for 'used gym equipment'. For website building and general techy scheming, Sam knows what he's doing!"</blockquote>
          <div>
            <div class="font-semibold text-white">Matt Miller</div>
            <div class="text-sm text-gray-300">Owner, Millers Fitness</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Blog Section -->
  {posts.length > 0 && (
    <section class="py-24 bg-white">
      <div class="container mx-auto px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto mb-12" data-animate>
          <h2 class="text-4xl lg:text-5xl font-bold text-slate-900 mb-4">
            From the Blog
          </h2>
          <p class="text-xl text-gray-600">
            Case studies and insights from recent projects.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto" data-stagger>
          {posts.map(post => (
            <PostCard
              title={post.data.title}
              description={post.data.description}
              pubDate={post.data.pubDate}
              heroImage={post.data.heroImage}
              heroImageAlt={post.data.heroImageAlt}
              category={post.data.category}
              slug={post.id}
            />
          ))}
        </div>

        <div class="text-center mt-10" data-animate>
          <a href="/blog" class="inline-flex items-center gap-2 text-ai-purple font-semibold hover:underline text-lg">
            View all posts
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>
    </section>
  )}

  <!-- CTA Section -->
  <section class="py-24 bg-gradient-to-br from-purple-700 via-purple-600 to-blue-600 text-white overflow-hidden relative">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 left-1/4 w-96 h-96 bg-white/20 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-amber-400/20 rounded-full blur-3xl"></div>
    </div>
    <div class="container relative z-10 mx-auto px-6 lg:px-8 text-center" data-animate>
      <h2 class="text-4xl lg:text-5xl font-bold mb-6 text-white">
        Ready to Discuss Your Project?
      </h2>
      <p class="text-xl text-white/90 mb-10 max-w-2xl mx-auto">
        Get in touch to chat about how I can help your business.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="https://wa.me/447584417830" target="_blank" rel="noopener noreferrer" class="bg-amber-500 hover:bg-amber-600 text-white font-bold py-4 px-8 rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl hover:-translate-y-0.5 btn-glow">
          View Services
        </a>
        <a href="/portfolio" class="bg-white/15 backdrop-blur-sm border-2 border-white/30 text-white px-8 py-4 rounded-lg font-semibold hover:bg-white hover:text-slate-900 transition-all duration-200">
          View Portfolio
        </a>
      </div>
    </div>
  </section>
</Layout>
