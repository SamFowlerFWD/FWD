---
import Layout from '../layouts/Layout.astro';

const projects = [
  {
    name: "Hoofflix",
    description: "Ongoing growth & IT partnership with the leading equestrian video streaming platform. Creating content, streamlining systems, optimising operations, and exploring new revenue channels.",
    services: ["Growth Partnership", "Content Strategy", "System Optimisation", "Revenue Development"],
    url: "https://hoofflix.com",
    image: "/portfolio/hoofflix.webp",
    alt: "Hoofflix equestrian video streaming platform with course library and user dashboard",
    industry: "Equestrian / Media",
    featured: true
  },
  {
    name: "Fakenham Dog Field",
    description: "Secure dog field booking system with Stripe payments and automated Paxton gate access codes. Book online, pay securely, receive instant access code.",
    services: ["Booking System", "Payment Integration", "Access Control", "Custom Build"],
    url: "https://fakenham-dog-field.pages.dev",
    image: "/portfolio/fakenham-dog-field.webp",
