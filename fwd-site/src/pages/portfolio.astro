    services: ["Club Systems", "Membership Management", "Event Booking", "Volunteer Project"],
    url: "https://norwichcanoeclub.co.uk",
    image: "/portfolio/norwich-canoe-club.webp",
    alt: "Norwich Canoe Club membership and event booking website",
    industry: "Sports & Recreation",
    featured: true
  },
  {
    name: "Ask Stephen",
    description: "Business mentorship platform with AI coaching, habit tracking, and the 4 Corners framework. 2,000+ active members.",
    services: ["iOS App", "AI Integration", "Backend Development"],
    url: "https://askstephen.app",
    image: "/portfolio/ask-stephen.webp",
    alt: "Ask Stephen business mentorship app with AI coaching and habit tracking",
    industry: "Technology",
    featured: true
  },
  {
    name: "Wee Horsebox Hire",
    description: "Bespoke booking system built from scratch. Handles availability, payments, and customer management automatically.",
    services: ["Booking System", "Payment Integration", "Website Build", "SEO"],
    url: "https://www.wee-horseboxhire.co.uk",
    image: "/portfolio/wee-horsebox-hire.webp",
    alt: "Wee Horsebox Hire booking system with availability calendar and payments",
    industry: "Equestrian",
    featured: true
  },
  {
    name: "J Taylor Horseboxes",
    description: "Horsebox manufacturer. Modernised website with time-saving features. End-to-end build including SEO and hosting.",
    services: ["Website Build", "SEO", "Hosting", "Maintenance"],
    url: "https://www.jthltd.co.uk",
    image: "/portfolio/jth-horseboxes.webp",
    alt: "J Taylor Horseboxes manufacturer website with product showcase",
    industry: "Manufacturing"
  },
  {
    name: "Harford Attachments",
    description: "Excavator attachments manufacturer. Website build with ongoing hosting, SEO and support.",
    services: ["Website Build", "Hosting", "SEO", "Support"],
    url: "https://www.harfordattachments.co.uk",
    image: "/portfolio/harford-attachments.webp",
    alt: "Harford Attachments excavator equipment website with product catalogue",
    industry: "Manufacturing"
  },
  {
    name: "Farriers Choice",
    description: "Webshop and product catalogue. Ongoing project with build, hosting, maintenance and SEO.",
    services: ["E-commerce", "Catalogue", "Hosting", "SEO"],
    url: "https://www.farrierschoice.uk",
    image: "/portfolio/farriers-choice.webp",
    alt: "Farriers Choice farriery supplies webshop with product catalogue",
    industry: "Equestrian"
  },
  {
    name: "Britten Farriery",
